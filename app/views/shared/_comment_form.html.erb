<div class="row">
    <aside class="span8">
<%= form_for [@book, review, Comment.new] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="content">
    <%= f.text_area :content , placeholder: "Compose new comment..." %>
  </div>
  <%= f.submit "comment", class: "btn btn-small btn-primary" %>
<% end %>
    </aside>
</div>    
